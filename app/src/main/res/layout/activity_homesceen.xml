<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homesceen">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/realcurrency"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:text="What would you like to convert?"
        android:textSize="18dp"
        android:textColor="#000000"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="REAL CURRENCY"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:id="@+id/realcurrency"
        android:background="@color/colorPrimary"
        android:textSize="28dp"
        android:textColor="#ffff"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CRYPTO CURRENCY"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:id="@+id/cryptocurrency"
        android:layout_below="@+id/realcurrency"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimary"
        android:textSize="28dp"
        android:textColor="#ffff"
        />

</RelativeLayout>